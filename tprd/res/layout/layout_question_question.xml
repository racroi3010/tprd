<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/WHITE"
    android:orientation="vertical"
     >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/txt_question_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="1. "
                android:textColor="@color/BLACK"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txt_question_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(2점)"
                android:gravity="center_vertical"
                android:textColor="@color/BLACK"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/img_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:orientation="vertical" >

            <Button
                android:id="@+id/btn_question_hint"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:background="@drawable/ic_image_wb_sunny_black" />             
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_question_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp"
        android:visibility="gone" >

        <TextView
            android:id="@+id/txt_question_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/hint_txt_border"
            android:padding="2dp"
            android:text="여자 : 영수 씨, 발표회 잘 끝났어요 못 가서 미안해요.\n남자 : 아니에요. 급한 일이 있었다면서요.\n여자 : _______________________"
            android:textColor="@color/GRAY_HINT"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_weight="4"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_question_choice_1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/circle_number_trans"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/BLACK" />

            <TextView
                android:id="@+id/txt_question_choice_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="발표하는 언제 시작해요?"
                android:textColor="@color/BLACK"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/img_question_choice_1"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_marginLeft="10dp"
                android:scaleType="fitStart"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_question_choice_2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/circle_number_trans"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/BLACK" />

            <TextView
                android:id="@+id/txt_question_choice_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="발표하는 언제 시작해요?"
                android:gravity="center_vertical"
                android:textColor="@color/BLACK"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/img_question_choice_2"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_marginLeft="10dp"
                android:scaleType="fitStart"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_question_choice_3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/circle_number_trans"
                android:gravity="center"
                android:text="3"
                android:textColor="@color/BLACK" />

            <TextView
                android:id="@+id/txt_question_choice_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="발표하는 언제 시작해요?"
                android:gravity="center_vertical"
                android:textColor="@color/BLACK"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/img_question_choice_3"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_marginLeft="10dp"
                android:scaleType="fitStart"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_question_choice_4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/circle_number_trans"
                android:gravity="center"
                android:text="4"
                android:textColor="@color/BLACK" />

            <TextView
                android:id="@+id/txt_question_choice_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="발표하는 언제 시작해요?"
                android:gravity="center_vertical"
                android:textColor="@color/BLACK"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/img_question_choice_4"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_marginLeft="10dp"
                android:scaleType="fitStart"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>